SHELL = /bin/sh
CFLAGS = -g -Wall -pedantic -std=c99 @PKGS_CFLAGS@ @SYSTEM_CFLAGS@
LDFLAGS = @PKGS_LDFLAGS@

prefix = @prefix@
exec_prefix = $(prefix)
bindir = $(exec_prefix)/bin
libdir = $(exec_prefix)/lib
datarootdir = $(prefix)/share
mandir = $(datarootdir)/man

INSTALL ?= install
INSTALLFLAGS ?= -D

SRCS=xmlkv.c \
	
DISTFILES=\
	Makefile.in\
	configure\
	README\
	LICENSE
PROG=xmlkv
MAN=xmlkv.1

OBJS=$(SRCS:.c=.o)

all: $(PROG)

$(PROG): $(OBJS)
	$(CC) -o$@ $(OBJS) $(LDFLAGS)

.c.o:
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(OBJS) $(PROG)

install: $(PROG)
	$(INSTALL) $(INSTALLFLAGS) $(PROG) $(DESTDIR)$(bindir)/$(PROG)
	$(INSTALL) $(INSTALLFLAGS) $(MAN) $(DESTDIR)$(mandir)/$(MAN)

uninstall:
	rm -f $(DESTDIR)$(bindir)/$(PROG)
